<% unless current_user == user %>
 <% if current_user.liking?(micropost) %>
    <%= form_for(favorites.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'UnLike', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(favorites.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Like', class: 'btn btn-primary btn-block' %>
    <% end %>
 <% end %>
<% end %>